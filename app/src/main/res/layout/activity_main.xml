<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="com.andresdavid.testgeofencinggideoracle.MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starlocationmonitor"
        android:id="@+id/starLocationMonitor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stargeofencemonitor"
        android:id="@+id/starGeofenceMonitor"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopgeofencemonitor"
        android:id="@+id/stopGeofenceMonitor"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
